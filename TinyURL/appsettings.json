{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "MongoDBSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "TinyURLDatabase"
  },
  "UrlShorteningSettings": {
    /// <summary>
    /// Base number for unique IDs (close to 62^6 for 7-char base-62 IDs).
    /// </summary>
    "BaseNumber": 56800235584,
    "BaseUrl": "https://localhost:7123/url/"

  },
  "MemoryCacheSetting": {
    "Capacity": 100
  }

}
